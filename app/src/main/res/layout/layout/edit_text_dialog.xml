<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:theme="@style/dBackground"
    android:paddingVertical="10dp"
    android:paddingHorizontal="20dp"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:text="Rename image"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textSize="30dp"
        android:textStyle="bold" />
    <EditText
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:id="@+id/editChangeFileName"
        android:layout_gravity="center"
        android:background="@drawable/custom_row_album"
        android:layout_marginTop="20dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="@color/red_1"
        android:textStyle="italic"
        android:visibility="invisible"
        android:id="@+id/errorName"
        android:text="File name not null and contain special charater"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <ImageButton
            android:theme="@style/dSelectedBtn"
            android:id="@+id/cancel"
            android:layout_width="48dp"
            android:layout_height="48dp"

            android:src="@drawable/ic_baseline_close_24"
            android:layout_marginRight="20dp"
            />

        <ImageButton
            android:theme="@style/dSelectedBtn"
            android:id="@+id/ok_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginLeft="20dp"

            android:src="@drawable/ic_baseline_check_24" />
    </LinearLayout>

</LinearLayout>