<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="5dp"
    android:layout_marginRight="10dp"
    android:theme="@style/customBackground"
    android:gravity="center"
    android:orientation="horizontal">

    <ImageView
        android:theme="@style/selectedImg"
        android:id="@+id/album_image"
        android:layout_width="103dp"
        android:layout_height="80dp"
        android:padding="5dp"
        android:src="@drawable/ic_baseline_folder_24" />

    <LinearLayout
        android:id="@+id/album_info"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/album_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="bottom|center|start"
            android:text="Album Name"
            android:textSize="23sp"

            android:textStyle="bold" />

        <TextView
            android:id="@+id/album_images_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="4dp"
            android:gravity="center|start|end"
            android:text="@string/album_image_count"
            android:textColor="@android:color/tertiary_text_light"
            android:textSize="20dp" />

    </LinearLayout>

<!--    <ImageView-->
<!--        android:id="@+id/moreBtnAlbum"-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="80dp"-->
<!--        android:layout_margin="10dp"-->
<!--        android:src="@drawable/ic_baseline_more_vert_24" />-->

</LinearLayout>