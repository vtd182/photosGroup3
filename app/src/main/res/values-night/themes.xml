<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GalleryGr3" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!--  custom color-->

        <!-- custom -->

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorOnSecondary</item>
        <!-- Customize your theme here. -->
        <item name="android:textColor">?attr/colorPrimary</item>

    </style>


    <style name="Theme.GalleryGr3.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

<!--    <style name="Theme.GalleryGr3.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />-->

<!--    <style name="Theme.GalleryGr3.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />-->
    <!--    main activity-->
    <style name="navbar">
        <item name="android:background">@android:color/black</item>
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>
    <style name="fragBtn">
        <item name="android:color">?attr/colorPrimary</item>
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>


    <!--    image display-->
    <style name="customBackground">
        <item name="android:backgroundTint">?attr/colorOnSecondary</item>
    </style>

    <style name="customBackgroundSecond">
        <item name="android:background">?attr/colorOnSecondary</item>
    </style>

    <style name="customFloatBtnPri" >
        <item name="android:backgroundTint">@color/red_1</item>
    </style>
    <style name="customFloatBtnSec" >
        <item name="android:backgroundTint">@color/fab</item>
    </style>
    <style name="imageBtn">
        <item name="android:backgroundTint">?attr/colorPrimary</item>
    </style>
    <style name="customFloatBtnNormal">
        <item name="android:backgroundTint">?attr/colorOnSecondary</item>
        <item name="android:tint">?attr/colorPrimary</item>
    </style>

    <!--    selected picture-->

    <style name="selectedImg">
        <item name="android:backgroundTint">?attr/colorOnSecondary</item>
        <item name="android:tint">?attr/colorPrimary</item>
    </style>

<!--    info dialog-->
    <style name="dialogbackgroud">
        <item name="android:backgroundTint">@color/space_grey</item>
        <item name="android:tint">?attr/colorPrimary</item>
    </style>
<!--    custom dialog-->
    <style name="dBackground">
        <item name="android:background">@color/ddmain</item>
    </style>

    <style name="dSelectedBtn">
        <item name="android:backgroundTint">@color/ddmain</item>
        <item name="android:tint">?attr/colorPrimary</item>
    </style>

    <style name="customHeart">
        <item name="android:tint">?attr/colorOnPrimary</item>
    </style>


<!--    fix bug -->
    <style name="fixImage">
        <item name="android:tint">@android:color/transparent</item>
    </style>



</resources>